<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.veyron.www.exampleforglide">
<uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.GlideBaseActivity"
            android:screenOrientation="portrait"
            android:label="GlideBase">
        </activity>
        <activity android:name=".activity.GlideRecyclerviewActivity"
                  android:screenOrientation="portrait"
            android:label="GlideRecyclerview">
        </activity>
        <activity android:name=".activity.GlideTranformationsActivity"
                  android:screenOrientation="portrait"
            android:label="GlideTranformations">
        </activity>
    </application>

</manifest>